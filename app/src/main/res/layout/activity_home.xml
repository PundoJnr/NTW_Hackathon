<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.poline.ntw_hackathon.Home">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/subletor"
        android:layout_alignLeft="@+id/subletor"
        android:layout_alignStart="@+id/subletor"
        android:layout_marginBottom="51dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:text="What are you looking for?"
        android:textColor="#B22222"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/subletor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="235dp"
        android:layout_marginLeft="60dp"
        android:layout_marginStart="60dp"
        android:text="Sublet" />

    <Button
        android:id="@+id/tenant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/subletor"
        android:layout_toRightOf="@+id/textView"
        android:text="Rent" />
</RelativeLayout>
